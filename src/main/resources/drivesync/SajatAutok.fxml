<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="drivesync.SajatAutokController"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #e8f0f7, #ffffff); -fx-padding: 20;">

    <!-- Fejléc -->
    <Label fx:id="welcomeLabel"
           text="Üdv, felhasználó!"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Autók listája vízszintesen -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="◀" fx:id="scrollLeftBtn" onAction="#scrollLeft"
                style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <ScrollPane fx:id="carsScrollPane" fitToHeight="true" fitToWidth="true"
                    hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"
                    style="-fx-background: transparent;">
            <FlowPane fx:id="carsList" hgap="20" vgap="20" prefWrapLength="800"/>
        </ScrollPane>
        <Button text="▶" fx:id="scrollRightBtn" onAction="#scrollRight"
                style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;"/>
    </HBox>

    <!-- Autó részletek + szerviz -->
    <TitledPane fx:id="carDetailsPane" expanded="false" collapsible="true"
                text="🚗 Autó részletei"
                style="-fx-font-size: 16px; -fx-font-weight: bold;">
        <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 12;">
            <Label fx:id="carDetailsLabel" text="Nincs kiválasztott autó."
                   style="-fx-font-size: 16px; -fx-text-fill: #34495e;"/>

            <Label text="➕ Új szerviz rögzítése" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Szerviz típusa:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="serviceTypeChoice" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="KM:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="serviceKmField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Ár (Ft):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="servicePriceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Dátum:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="serviceDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Cserélt alkatrészek:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="replacedPartsField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Button fx:id="saveServiceBtn" text="✔ Mentés" onAction="#saveService"
                        GridPane.rowIndex="5" GridPane.columnIndex="1"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;"/>
            </GridPane>

            <Label text="🔧 Korábbi szervizek:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <ListView fx:id="serviceListView" prefHeight="150" minHeight="150"/>
        </VBox>
    </TitledPane>

    <!-- Új autó hozzáadása -->
    <TitledPane fx:id="addCarTitledPane" expanded="false" collapsible="true"
                text="➕ Új autó hozzáadása"
                style="-fx-font-size: 16px; -fx-font-weight: bold;">
        <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 12;">
            <Label fx:id="formTitle" text="Új autó hozzáadása"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Rendszám:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="licenseField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Márka:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="brandField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Típus:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="typeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Évjárat:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="vintageField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Motor típus:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="engineTypeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Üzemanyag:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="fuelTypeField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="KM:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="kmField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Olaj:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="oilField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Label text="Gumi méret:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <TextField fx:id="tireSizeField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                <Label text="Szerviz dátum:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <DatePicker fx:id="serviceDatePickerCar" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                <Label text="Biztosítás:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                <DatePicker fx:id="insuranceDatePicker" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                <Button fx:id="addCarButton" text="✔ Mentés" onAction="#handleAddOrEditCar"
                        GridPane.rowIndex="11" GridPane.columnIndex="1"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;"/>
            </GridPane>
        </VBox>
    </TitledPane>

</VBox>
