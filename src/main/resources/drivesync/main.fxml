<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="drivesync.MainController">

    <HBox prefWidth="900" prefHeight="500">

        <!-- Bal panel -->
        <VBox alignment="CENTER" prefWidth="400" styleClass="left-panel" spacing="20">
            <ImageView fx:id="logoImage" fitWidth="100" fitHeight="100"/>
            <Label text="Üdv a DriveSync-ben!" styleClass="welcome-text"/>
            <ImageView fx:id="panelImage" fitWidth="300" fitHeight="250"/>
        </VBox>

        <!-- Jobb panel -->
        <StackPane prefWidth="500" styleClass="right-panel">

            <!-- Login pane -->
            <VBox fx:id="loginPane" alignment="CENTER" spacing="15" styleClass="form-pane">
                <Label fx:id="loginTitle" text="Bejelentkezés" styleClass="panel-title"/>
                <Label text="Felhasználónév:"/>
                <TextField fx:id="loginUsername" promptText="Felhasználónév"/>
                <Label text="Jelszó:"/>
                <PasswordField fx:id="loginPassword" promptText="Jelszó"/>
                <Button fx:id="loginButton" text="Bejelentkezés" onAction="#handleLogin"/>
                <Hyperlink text="Nincs fiókod? Regisztrálj" onAction="#showRegister"/>
            </VBox>

            <!-- Register pane -->
            <VBox fx:id="registerPane" alignment="CENTER" spacing="10" styleClass="form-pane" visible="false">
                <Label fx:id="registerTitle" text="Regisztráció" styleClass="panel-title"/>
                <Label text="Felhasználónév:"/>
                <TextField fx:id="regUsername" promptText="Felhasználónév"/>
                <Label text="Email:"/>
                <TextField fx:id="regEmail" promptText="Email"/>
                <Label text="Jelszó:"/>
                <PasswordField fx:id="regPassword" promptText="Jelszó"/>
                <Label text="Keresztnév:"/>
                <TextField fx:id="regVnev" promptText="Keresztnév"/>
                <Label text="Vezetéknév:"/>
                <TextField fx:id="regKnev" promptText="Vezetéknév"/>
                <Button fx:id="registerButton" text="Regisztráció" onAction="#handleRegister"/>
                <Hyperlink text="Van már fiókod? Bejelentkezés" onAction="#showLogin"/>
            </VBox>

        </StackPane>

    </HBox>
</AnchorPane>
