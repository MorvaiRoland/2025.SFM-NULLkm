<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="drivesync.MainController"
      prefHeight="550" prefWidth="900">

    <!-- Bal panel – arany átmenetes háttér, középen logo és szöveg -->
    <StackPane prefWidth="350">
        <StackPane style="-fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500);">
            <VBox alignment="CENTER" spacing="20">
                <!-- Logo kép -->
                <ImageView fx:id="panelImage"
                           fitWidth="200"
                           fitHeight="200"
                           preserveRatio="true"
                           pickOnBounds="true"/>

                <!-- App neve -->
                <Label text="DriveSync"
                       style="-fx-font-size:36px; -fx-font-weight:bold; -fx-text-fill: white;" />

                <!-- Frappáns mottó -->
                <Label text="„Mindig kéznél, mindig szinkronban.”"
                       style="-fx-font-size:16px; -fx-text-fill: white; -fx-font-style: italic;" />
            </VBox>
        </StackPane>
    </StackPane>

    <!-- Jobb panel – login/register -->
    <StackPane prefWidth="550" styleClass="right-panel">

        <!-- Login pane -->
        <VBox fx:id="loginPane" alignment="CENTER" spacing="15" styleClass="form-pane">
            <Label fx:id="loginTitle" style="-fx-font-size:52px;" text="Bejelentkezés" />
            <Label text="Felhasználónév:" />
            <TextField fx:id="loginUsername" promptText="Felhasználónév" />
            <Label text="Jelszó:" />
            <PasswordField fx:id="loginPassword" promptText="Jelszó" />
            <Button fx:id="loginButton" onAction="#handleLogin" text="Bejelentkezés" />
            <Hyperlink onAction="#showRegister" text="Nincs fiókod? Regisztrálj" />
        </VBox>

        <!-- Register pane -->
        <VBox fx:id="registerPane" alignment="CENTER" spacing="10" styleClass="form-pane" visible="false">
            <Label fx:id="registerTitle" style="-fx-font-size:52px;" text="Regisztráció" />
            <Label text="Felhasználónév:" />
            <TextField fx:id="regUsername" promptText="Felhasználónév" />
            <Label text="Email:" />
            <TextField fx:id="regEmail" promptText="Email" />

            <!-- Jelszó -->
            <Label text="Jelszó:" />
            <StackPane>
                <PasswordField fx:id="regPassword" promptText="Jelszó" />
                <TextField fx:id="regPasswordVisible" promptText="Jelszó" visible="false" />
            </StackPane>

            <!-- Jelszó megerősítése -->
            <Label text="Jelszó megerősítése:" />
            <StackPane>
                <PasswordField fx:id="regPasswordConfirm" promptText="Jelszó ismét" />
                <TextField fx:id="regPasswordConfirmVisible" promptText="Jelszó ismét" visible="false" />
            </StackPane>

            <!-- Jelszó mutatás -->
            <CheckBox fx:id="showPasswordCheck" text="Mutasd a jelszót" />

            <Button fx:id="registerButton" onAction="#handleRegister" text="Regisztráció" />
            <Hyperlink onAction="#showLogin" text="Van már fiókod? Bejelentkezés" />
        </VBox>

    </StackPane>

</HBox>
