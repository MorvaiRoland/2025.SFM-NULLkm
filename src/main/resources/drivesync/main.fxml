<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="drivesync.MainController">

    <HBox prefHeight="550" prefWidth="900">

        <!-- Bal panel -->
        <VBox alignment="CENTER" prefWidth="400" spacing="20" styleClass="left-panel">
            <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" />
            <Label styleClass="welcome-text" text="Üdv a DriveSync-ben!" />
            <ImageView fx:id="panelImage" fitHeight="250" fitWidth="300" />
        </VBox>

        <!-- Jobb panel -->
        <StackPane prefWidth="500" styleClass="right-panel">

            <!-- Login pane -->
            <VBox fx:id="loginPane" alignment="CENTER" spacing="15" styleClass="form-pane">
                <Label fx:id="loginTitle" styleClass="panel-title" text="Bejelentkezés">
                    <font>
                        <Font size="43.0" />
                    </font>
                </Label>
                <Label text="Felhasználónév:" />
                <TextField fx:id="loginUsername" promptText="Felhasználónév" />
                <Label text="Jelszó:" />
                <PasswordField fx:id="loginPassword" promptText="Jelszó" />
                <Button fx:id="loginButton" onAction="#handleLogin" text="Bejelentkezés" />
                <Hyperlink onAction="#showRegister" text="Nincs fiókod? Regisztrálj" />
            </VBox>

            <!-- Register pane -->
            <VBox fx:id="registerPane" alignment="CENTER" spacing="10" styleClass="form-pane" visible="false">
                <Label fx:id="registerTitle" styleClass="panel-title" text="Regisztráció">
                    <font>
                        <Font size="43.0" />
                    </font>
                </Label>
                <Label text="Felhasználónév:" />
                <TextField fx:id="regUsername" promptText="Felhasználónév" />
                <Label text="Email:" />
                <TextField fx:id="regEmail" promptText="Email" />

                <!-- Jelszó -->
                <Label text="Jelszó:" />
                <StackPane>
                    <PasswordField fx:id="regPassword" promptText="Jelszó" />
                    <TextField fx:id="regPasswordVisible" promptText="Jelszó" visible="false" />
                </StackPane>

                <!-- Jelszó megerősítése -->
                <Label text="Jelszó megerősítése:" />
                <StackPane>
                    <PasswordField fx:id="regPasswordConfirm" promptText="Jelszó ismét" />
                    <TextField fx:id="regPasswordConfirmVisible" promptText="Jelszó ismét" visible="false" />
                </StackPane>

                <!-- Jelszó mutatás -->
                <CheckBox fx:id="showPasswordCheck" text="Mutasd a jelszót" />

                <Button fx:id="registerButton" onAction="#handleRegister" text="Regisztráció" />
                <Hyperlink onAction="#showLogin" text="Van már fiókod? Bejelentkezés" />
            </VBox>

        </StackPane>

    </HBox>
</AnchorPane>
