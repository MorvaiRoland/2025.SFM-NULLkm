<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<HBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="drivesync.HomeController"
      prefWidth="1200" prefHeight="700">

    <!-- Oldalsó menü fix szélességgel -->
    <VBox spacing="20"
          prefWidth="250" minWidth="250" maxWidth="250"
          style="-fx-background-color: #2c2c2c; -fx-padding: 20;">

        <!-- Felhasználói név -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Bejelentkezve:" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
            <Label fx:id="usernameLabel" text="Felhasználó" style="-fx-text-fill: gold; -fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
        </VBox>

        <!-- Menü gombok -->
        <VBox spacing="10">
            <Button fx:id="homeBtn" text="🏠 Főoldal" onAction="#showHome" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: gold; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
            <Button fx:id="carsBtn" text="🚗 Saját autók" onAction="#showCars" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: gold; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
            <Button fx:id="budgetBtn" text="💰 Költségvetés" onAction="#showBudget" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: gold; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
            <Button fx:id="linksBtn" text="🔗 Hasznos linkek" onAction="#showLinks" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: gold; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
            <Button fx:id="calculatorBtn" text="🔢 Kalkulátor" onAction="#showCalculator" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: gold; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
        </VBox>

        <!-- Alsó gombok -->
        <VBox spacing="10" style="-fx-padding: 50 0 0 0;">
            <Button fx:id="settingsBtn" text="⚙ Beállítások" onAction="#showSettings" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: gold; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
            <Button fx:id="logoutButton" text="🚪 Kijelentkezés" onAction="#handleLogout" maxWidth="Infinity"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 10 20 10 20; -fx-cursor: hand;"/>
        </VBox>
    </VBox>

    <!-- Tartalom ScrollPane -->
    <ScrollPane fx:id="contentScrollPane" HBox.hgrow="ALWAYS" fitToWidth="true" fitToHeight="true"
                style="-fx-background: #ecf0f1;">
        <VBox fx:id="contentContainer" spacing="10" style="-fx-padding: 20;"/>
    </ScrollPane>

</HBox>
