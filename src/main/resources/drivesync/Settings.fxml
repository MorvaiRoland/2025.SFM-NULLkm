<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="drivesync.SettingsController"
      spacing="15" BorderPane.alignment="CENTER">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <!-- Felhasználói adatok -->
    <TitledPane text="Felhasználói adatok" collapsible="false">
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Név:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Jelszó:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Regisztráció dátuma:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="regDateLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </TitledPane>

    <!-- Alapértelmezett beállítások -->
    <TitledPane text="Alapértelmezett beállítások" collapsible="false">
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <CheckBox fx:id="darkModeCheck" text="Sötét mód"/>
            <CheckBox fx:id="notificationsCheck" text="Értesítések engedélyezése"/>
            <CheckBox fx:id="autoSyncCheck" text="Automatikus szinkron"/>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="PDF mentési útvonal:"/>
                <TextField fx:id="pdfPathField" prefWidth="200"/>
                <Button text="Tallózás" onAction="#handleBrowsePdfPath"/>
            </HBox>
        </VBox>
    </TitledPane>

    <!-- Gombok -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Button fx:id="saveBtn" text="Mentés" onAction="#handleSave"/>
        <Button fx:id="resetBtn" text="Alapértelmezett" onAction="#handleReset"/>
    </HBox>

</VBox>
