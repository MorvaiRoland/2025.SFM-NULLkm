<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="drivesync.SettingsController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Felhasználói fiók beállítások" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="15">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Felhasználónév:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Jelszó:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Regisztráció dátuma:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="regDateLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15">
        <padding>
            <Insets top="10" right="0" bottom="0" left="0"/>
        </padding>

        <Button text="Mentés" fx:id="saveBtn" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Visszaállítás" fx:id="resetBtn" onAction="#handleReset" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
