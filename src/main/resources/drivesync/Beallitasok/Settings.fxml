<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="drivesync.Beallitasok.SettingsController"
            fitToWidth="true" vbarPolicy="AS_NEEDED"
            styleClass="app-bg">
    <content>
        <VBox spacing="25" maxWidth="900" alignment="TOP_CENTER">

            <Label text="Alkalmazás Beállítások" styleClass="page-title">
                <padding>
                    <Insets top="20" bottom="10"/>
                </padding>
            </Label>
            <Separator/>

            <TitledPane text="Megjelenés és Felület" expanded="true" styleClass="card">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Téma kiválasztása:" styleClass="card-subtitle"/>
                        <ChoiceBox fx:id="themeChoiceBox">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Világos"/>
                                    <String fx:value="Sötét"/>
                                    <String fx:value="Rendszer alapértelmezett"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>

                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Alap betűméret:" styleClass="card-subtitle"/>
                        <Slider fx:id="fontSizeSlider" min="10" max="18" value="14" showTickLabels="true" showTickMarks="true" majorTickUnit="2"/>
                    </HBox>
                </VBox>
            </TitledPane>






            <TitledPane text="Névjegy és Verzió" expanded="false" styleClass="card">
                <VBox spacing="15" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <ImageView fx:id="logoImageView" fitWidth="100" fitHeight="100" preserveRatio="true"/>
                    <Label text="DriveSync" styleClass="page-title"/>
                    <Label text="Verzió: 1.0.0 (BETA)  " styleClass="text-muted"/>
                    <Label text="Fejlesztők: [Morvai Roland, Dóczi Bence, Lőrincz Levente, Kovács Dávid]" styleClass="text-muted"/>
                    <Label text="© 2025 Minden jog fenntartva." styleClass="text-muted"/>
                </VBox>
            </TitledPane>

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10" bottom="20"/>
                </padding>
                <Button text="Visszaállítás" fx:id="resetBtn" onAction="#handleReset" styleClass="btn-ghost"/>
                <Button text="Mentés" fx:id="saveBtn" onAction="#handleSave" styleClass="btn-primary"/>
            </HBox>

        </VBox>
    </content>
</ScrollPane>