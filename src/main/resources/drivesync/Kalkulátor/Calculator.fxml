<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="drivesync.Kalkulátor.CalculatorController"
            fitToHeight="true"
            fitToWidth="true"
            style="-fx-background: #f5f7fb;">

    <!-- Tartalom burkoló a középre igazításhoz és belső margókhoz -->
    <content>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <!-- Oldalcím -->
            <Label text="Kalkulátorok" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label text="Számold ki gyorsan a költségeket és díjakat."
                   style="-fx-text-fill: #5f6b7a;"/>

            <!-- Kártyák rugalmas elrendezése: 1-3 oszlop a rendelkezésre álló szélességtől függően -->
            <FlowPane alignment="CENTER" hgap="20" vgap="20" prefWrapLength="960">

                <!-- ================= Üzemanyag kalkulátor (kártya) ================= -->
                <VBox spacing="12" prefWidth="320"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,4);">
                    <Label text="Üzemanyag kalkulátor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Számold ki, mennyibe kerül egy út üzemanyagköltsége."
                           wrapText="true" style="-fx-text-fill: #6b7280;"/>

                    <VBox spacing="6">
                        <Label text="Megtett távolság (km)" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="distanceField" promptText="pl. 120" prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Fogyasztás (l/100 km)" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="consumptionField" promptText="pl. 6.5" prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Üzemanyag ára (Ft/l)" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="priceField" promptText="pl. 650" prefWidth="Infinity"/>
                    </VBox>

                    <!-- Gomb + Eredmény egy sorban -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="calcButton" text="Számolás"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 14;"/>
                        <Label fx:id="resultLabel" text="Eredmény itt"
                               style="-fx-font-size: 14px; -fx-text-fill: #1f2937;"/>
                    </HBox>
                </VBox>

                <!-- ================= Gépjárműadó kalkulátor (kártya) ================= -->
                <VBox spacing="12" prefWidth="320"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,4);">
                    <Label text="Gépjárműadó kalkulátor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Becsüld meg az éves gépjárműadót a teljesítmény és a gyártási év alapján."
                           wrapText="true" style="-fx-text-fill: #6b7280;"/>

                    <VBox spacing="6">
                        <Label text="Teljesítmény (kW)" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="HorsePower" promptText="pl. 85" prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Gyártás éve" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="ProductionYear" promptText="pl. 2015" prefWidth="Infinity"/>
                    </VBox>

                    <!-- Gomb + Eredmény egy sorban -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="calcButton1" text="Számolás"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 14;"/>
                        <Label fx:id="resultLabel1" text="Eredmény itt"
                               style="-fx-font-size: 14px; -fx-text-fill: #1f2937;"/>
                    </HBox>
                </VBox>

                <!-- ================= Kötelező biztosítás kalkulátor (kártya) ================= -->
                <VBox spacing="12" prefWidth="320"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,4);">
                    <Label text="Kötelező biztosítás kalkulátor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Számold ki az éves kötelező biztosítás díját az alapdíj, teljesítmény és B/M fokozat alapján."
                           wrapText="true" style="-fx-text-fill: #6b7280;"/>

                    <VBox spacing="6">
                        <Label text="Alapdíj (Ft)" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="BaseFee" promptText="pl. 30 000" prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Teljesítmény faktor (kW)" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="PowerFactor" promptText="pl. 1.2" prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Gyártás éve" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="ProductionYear1" promptText="pl. 2010" prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Bónusz-Malusz szorzó" style="-fx-text-fill: #374151; -fx-font-size: 12px;"/>
                        <TextField fx:id="BonusMalus" promptText="pl. 0.9" prefWidth="Infinity"/>
                    </VBox>

                    <!-- Gomb + Eredmény egy sorban -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="calcButton2" text="Számolás"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 14;"/>
                        <Label fx:id="resultLabel2" text="Eredmény itt"
                               style="-fx-font-size: 14px; -fx-text-fill: #1f2937;"/>
                    </HBox>
                </VBox>

            </FlowPane>
        </VBox>
    </content>
</ScrollPane>
