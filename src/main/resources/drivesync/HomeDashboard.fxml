<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="drivesync.HomeDashboardController"
      spacing="30"
      alignment="TOP_CENTER"
      style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom, #f0f4f8, #ffffff);">

    <!-- Üdvözlés -->
    <VBox spacing="15" alignment="CENTER">
        <Label fx:id="welcomeLabel" text="Üdvözöllek a DriveSync-ben!"
               style="-fx-font-size: 34; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
        <Label fx:id="dateLabel"
               style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" />
    </VBox>

    <!-- Autók kártyák -->
    <FlowPane fx:id="carsFlowPane" hgap="20" vgap="20" prefWrapLength="800" alignment="CENTER" />
</VBox>
