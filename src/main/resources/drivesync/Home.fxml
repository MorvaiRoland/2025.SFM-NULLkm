<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="drivesync.HomeController"
      prefWidth="1200" prefHeight="700">

    <!-- Oldalsó menü -->
    <VBox spacing="30" prefWidth="250" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-padding: 40;">
        <VBox spacing="5">
            <Label text="Üdv," style="-fx-text-fill: #ecf0f1; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="usernameLabel" text="Felhasználó" style="-fx-text-fill: #ecf0f1; -fx-font-size: 20px; -fx-font-weight: bold;" wrapText="true"/>
        </VBox>

        <!-- Menü gombok -->
        <Button fx:id="homeBtn" text="🏠 Főoldal" onAction="#showHome"
                style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button fx:id="carsBtn" text="🚗 Saját autók" onAction="#showCars"
                style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button fx:id="budgetBtn" text="💰 Költségvetés" onAction="#showBudget"
                style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button fx:id="linksBtn" text="🔗 Hasznos linkek" onAction="#showLinks"
                style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button fx:id="calculatorBtn" text="🔢 Kalkulátor" onAction="#showCalculator"
                style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <!-- Kijelentkezés -->
        <Button fx:id="logoutButton" text="🚪 Kijelentkezés" onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"/>
    </VBox>

    <!-- Tartalom terület ScrollPane-ben -->
    <ScrollPane fx:id="contentScrollPane" HBox.hgrow="ALWAYS" fitToWidth="true" fitToHeight="true" style="-fx-background: #ecf0f1;">
        <VBox fx:id="contentContainer" spacing="10" style="-fx-padding: 20;"/>
    </ScrollPane>

</HBox>
