<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="drivesync.HomeController"
      prefWidth="1200" prefHeight="700">

    <!-- Oldalsó menü -->
    <VBox spacing="30" prefWidth="250" style="-fx-background-color: linear-gradient(to bottom, #000000, #1a1a1a); -fx-padding: 40;">

        <!-- Üdvözlés -->
        <VBox spacing="5">
            <Label text="Üdv," style="-fx-text-fill: #FFD700; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="usernameLabel" text="Felhasználó" style="-fx-text-fill: #FFD700; -fx-font-size: 20px; -fx-font-weight: bold;" wrapText="true"/>
        </VBox>

        <!-- Menü gombok -->
        <Button fx:id="homeBtn" text="🏠 Főoldal" onAction="#showHome"
                style="-fx-background-color: transparent; -fx-text-fill: #FFD700; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button fx:id="carsBtn" text="🚗 Saját autók" onAction="#showCars"
                style="-fx-background-color: transparent; -fx-text-fill: #FFD700; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button fx:id="budgetBtn" text="💰 Költségvetés" onAction="#showBudget"
                style="-fx-background-color: transparent; -fx-text-fill: #FFD700; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button fx:id="linksBtn" text="🔗 Hasznos linkek" onAction="#showLinks"
                style="-fx-background-color: transparent; -fx-text-fill: #FFD700; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button fx:id="calculatorBtn" text="🔢 Kalkulátor" onAction="#showCalculator"
                style="-fx-background-color: transparent; -fx-text-fill: #FFD700; -fx-font-size: 16px; -fx-font-weight: bold;"/>

        <!-- Kijelentkezés -->
        <Button fx:id="logoutButton" text="🚪 Kijelentkezés" onAction="#handleLogout"
                style="-fx-background-color: #FF4C4C; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12;"/>
    </VBox>

    <!-- Tartalom terület -->
    <StackPane fx:id="contentPane" HBox.hgrow="ALWAYS" style="-fx-background-color: #FFF8DC; -fx-padding: 50;">
        <VBox spacing="30" alignment="CENTER">
            <Label fx:id="contentLabel" text="Főoldal tartalom" style="-fx-font-size: 28px; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
            <HBox spacing="20" alignment="CENTER">
                <Pane prefWidth="250" prefHeight="150" style="-fx-background-color: #FFD700; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8,0,0,4);"/>
                <Pane prefWidth="250" prefHeight="150" style="-fx-background-color: #FFD700; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8,0,0,4);"/>
                <Pane prefWidth="250" prefHeight="150" style="-fx-background-color: #FFD700; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8,0,0,4);"/>
            </HBox>
        </VBox>
    </StackPane>

</HBox>
