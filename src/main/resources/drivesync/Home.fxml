<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="drivesync.HomeController"
      alignment="CENTER" spacing="30"
      prefWidth="900" prefHeight="600"
      style="-fx-background-color: linear-gradient(to bottom right, #1e1e2f, #2a2a40); -fx-padding: 50;">

    <Label fx:id="welcomeLabel" text="Üdv!"
           style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="20">
        <Button text="📂 Fájlok"
                style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 12;"/>
        <Button text="⚙️ Beállítások"
                style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 12;"/>
        <Button fx:id="logoutButton" text="🚪 Kijelentkezés"
                onAction="#handleLogout"
                style="-fx-background-color: #FF4C4C; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 12;"/>
    </HBox>

</VBox>
